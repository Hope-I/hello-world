struct (结构名1){
		(类型) (变量名1);
		(类型) (变量名2);
	};//一般放在函数之外，这里的花括号后面也要加“;”
	
	函数{
		（1）struct (结构名1) (变量名3) = {(值1),(值2)};
		
		（2）struct (结构名1) (变量名3) = {.(变量名1)=(值1), .(变量名2)=(值2)};
		
		（3）struct (结构名1) (变量名3);
		(变量名3) = ( struct (结构名1) ){(值1),(值2)};
		
		（4）struct (结构名1) (变量名3);
		(结构名1).(变量名1) = (值1);
		(结构名1).(变量名1) = (值2);	
		
		scanf("%i", &(变量名) )
		printf("%i", (变量名) ); 
		
		//相同结构不同变量可以做赋值
		
	}
